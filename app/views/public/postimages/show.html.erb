<div class="container">

  <h4 class="margin-y">投稿詳細</h4>
  <div class='row align-items-center justify-content-center'>
    <div class='col-md-4 admin-item-image' >
      <% if @postimage.image.attached? %>
        <%= image_tag @postimage.image, size:'100×100' %>
      <% else %>
        <%= image_tag 'no_image', size: '100×100' %>
      <% end %>
    </div>

      <div class='col-md-8 mt-3'>
        <table class="table table-bordered table-light">
          <tr>
            <td><%= link_to(@postimage.user) do %>
            <%= image_tag @postimage.user.get_profile_image, size:'100×100' %><br>
            <%= @postimage.user.name %>
          <% end %>
          </td>
            </tr>
          <tr>
            <td class="bg-brown">タイトル</td>
            <td><%= @postimage.title %></td>
          </tr>
          <tr>
            <td class="bg-brown">説明</td>
            <td><%= @postimage.body %></td>
          </tr>
          <tr>
            <td>
              <% if @postimage.user == current_user %>
                <%= link_to "編集する", edit_postimage_path(@postimage.id), class: "btn btn-success padding-x" %>
              <% end %>
            </td>
            <td>
              <% if @postimage.user == current_user %>
                <%= link_to 'Destroy', postimage_path(@postimage.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              <% end %>
            </td>
          </tr>
        </table>

         <div>
          <p>コメント件数：<%= @postimage.comments.count %></p>
          <% @postimage.comments.each do |comment| %>
            <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.user == current_user %>
              <%= link_to "削除", postimage_comment_path(comment.postimage, comment), method: :delete %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@postimage, @postimage_comment], url: postimage_comments_path(@postimage.id) do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>
      </div>
  </div>
</div>