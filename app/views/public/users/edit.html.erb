<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local:true do |f| %>
      <%= render "layouts/form_errors", model: @user %>
      <div class="form-group">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_field :introduction, value: @user.introduction.present? ? @user.introduction : 'よろしくお願いします', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      <div class="actions d-flex justify-content-around">
        <%= link_to "退会する", users_confirm_path, class: "btn btn-danger" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
