<table class='table table-hover table-inverse'>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="text-center"> <!-- 新しい行を追加 -->
          <div class="card" style="width: auto;">
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(500, 450),
                      class: "img-resize, rounded mx-auto d-block",
                      style: "object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <h4 class="card-title">投稿者:<%=link_to user.name,user_path(user.id) %></h4>
              <h5 class="card-text">説明:<%= user.introduction %></h5>
              <p class="card-text">
                <% if current_user != user %>
                  <% if current_user.following?(user) %>
                    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
                  <% else %>
                    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
                  <% end %>
                <% end %>
              </p>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

