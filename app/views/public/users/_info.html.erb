<table class='table'>
  <tr><%= image_tag user.get_profile_image(100, 100)  %></tr>
  <tr>
	  <th>名前</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>紹介文</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <tr>
      <th>フォロー</th>
      <th>
        <%= link_to follows_user_path(user) do %>
        <%= user.following_users.count %>
        <% end %>&nbsp;&nbsp;
      </th>
    </tr>
    <tr>
      <th>フォロワー</th>
      <th>
        <%= link_to followers_user_path(user) do %>
        <%= user.follower_users.count %>
        <% end %>
      </th>
    </tr>
    <tr><th>
      <% if current_user != user %>
        <% if current_user.following?(user) %>
          <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
        <% else %>
          <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
        <% end %>
      <% end %>
    </th></tr>
  </tr>
</table>
<% if current_user = user %>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <p>プロフィール編集</p>
  <% end %>
</div>
<div class='row'>
  <%= link_to new_postimage_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <p>写真の投稿</p>
  <% end %>
</div>
<% end %>

