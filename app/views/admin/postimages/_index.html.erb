<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>投稿写真</th>
      <th>タイトル/場所</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% postimages.each do |postimage| %>
      <tr>
        <td>
          <% if postimage.image.attached? %>
            <%= image_tag postimage.image, size:'100×100' %>
          <% else %>
            <%= image_tag 'no_image', size: '100×100' %>
          <% end %>
        </td>
        <td><%= link_to postimage.title,admin_postimage_path(postimage.id) %></td>
        <td><%= postimage.body %></td>
        <!--いいね機能-->
　　　　<td>
　　　　  <p><%= link_to "#{postimage.comments.count} コメント", admin_postimage_path(postimage.id) %></p>
　　　　</td>
      </tr>
    <% end %>
  </tbody>
</table>